<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  Background="White"
        SizeToContent="WidthAndHeight"   WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize"
        Title="MainWindow" >
    <Grid Width="800" Height="550">
        <Border>
            <Border.Background>
                <ImageBrush ImageSource="{Binding MinBackground}" Stretch="Fill"/>
            </Border.Background>
        </Border>

        <Grid Margin="28,10,28,45" Background="Red">
            <Border HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="30" Background="Black" PreviewMouseLeftButtonDown="Border_PreviewMouseLeftButtonDown"/>
            
            <Button Content="Close" HorizontalAlignment="Center" VerticalAlignment="Center" Click="CloseBtn_Click" Width="75" Height="25"/>
        </Grid>
    </Grid>
</Window>
